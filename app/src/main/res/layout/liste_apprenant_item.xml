<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/laItem_textView_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/laItem_textView_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/laItem_textView_skill"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/laItem_textView_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/laItem_textView_nom"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/laItem_imageButton_detail"
        android:layout_width="33dp"
        android:layout_height="37dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/laItem_textView_prenom"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.801" />

</android.support.constraint.ConstraintLayout>